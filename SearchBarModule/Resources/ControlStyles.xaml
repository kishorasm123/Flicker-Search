<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Style x:Key="styleSearchTextBoxOriginal" TargetType="TextBox">
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=txtSearchTextBoxOriginal,Path=Text}" Value="">
                <Setter Property="Opacity" Value="0.5"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <ControlTemplate x:Key="controlInputTextBox" TargetType="TextBox">
        <Grid>
            <TextBox x:Name="txtSearchTextBoxDefault" VerticalContentAlignment="Center">Ask me...</TextBox>
            <TextBox x:Name="txtSearchTextBoxOriginal" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource styleSearchTextBoxOriginal}" VerticalContentAlignment="Center"></TextBox>
        </Grid>
     
    </ControlTemplate>
    
</ResourceDictionary>