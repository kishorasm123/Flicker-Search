<Window x:Class="Flicker_Search.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flicker_Search"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="Flicker Photo Search" MinHeight="450" MinWidth="800" prism:ViewModelLocator.AutoWireViewModel="True">
    
    <DockPanel>
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="SearchBar" Height="50"></ContentControl>
        <ContentControl DockPanel.Dock="Bottom" prism:RegionManager.RegionName="StatusBar" Height="20"></ContentControl>
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="SearchResults"></ContentControl>
    </DockPanel>
    
</Window>
